<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:theme="@style/ThemeOverlay.AppCompat.Dark"
                                   app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                   android:minHeight="?android:attr/actionBarSize">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView android:id="@+id/logo_image"
                   android:layout_alignParentStart="true"
                   android:layout_centerVertical="true"
                   android:scaleType="centerInside"
                   android:background="@color/transparent"
                   android:adjustViewBounds="true"
                   android:minHeight="28dp"
                   android:minWidth="28dp"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:maxHeight="38dp"
                   android:maxWidth="38dp"
                   android:visibility="gone" android:layout_alignParentLeft="true"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/title_tv"
                  android:layout_toEndOf="@+id/logo_image"
                  style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp" android:layout_toRightOf="@+id/logo_image"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/sub_title_tv"
                  android:layout_toEndOf="@+id/logo_image"
                  android:layout_below="@+id/title_tv"
                  style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:visibility="gone"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp" android:layout_toRightOf="@+id/logo_image"/>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>